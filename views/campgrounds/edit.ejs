<% layout("layouts/boilerplate") %> 

    <div class="row">
        <h1 class="text-center mb-3">Edit Campground</h1>
        <div class="col-8 offset-2">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Campground Name: </label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= campground.name %>" required>
                    <div class="invalid-feedback">
                        Please insert the campground name.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
                    <div class="invalid-feedback">
                        Location required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL: </label>
                    <input class="form-control" type="text" name="image" id="image" value="<%= campground.image %>" required>
                    <div class="invalid-feedback">
                        Image required.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="textarea" name="description" id="description"><%= campground.description %>"</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group mb-3">
                            <span class="input-group-text" id="price">$</span>
                            <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price" name="price" value="<%= campground.price %>" required>
                            <div class="invalid-feedback">
                                Price required.
                            </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>">Cancel Edit</a>
                </div>

            </form>
            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <div class="mb-3">
                    <button class="btn btn-danger">Delete Campground</button>
                </div>
            </form>
        </div>
    </div>
