<% layout("layouts/boilerplate") %> 

<div class="row">
    <h1 class="text-center mb-3">Create a new Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Campground Name: </label>
                <input class="form-control" type="text" name="name" id="name" required>
                <div class="invalid-feedback">
                    Please insert the campground name.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" type="text" name="location" id="location" required>
                <div class="invalid-feedback">
                    Location required.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL: </label>
                <input class="form-control" type="text" name="image" id="image" required>
                <div class="invalid-feedback">
                    Image required.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea class="form-control" type="textarea" name="description" id="description"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price: </label>
                <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price" name="price" required>
                        <div class="invalid-feedback">
                            Price required.
                        </div>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>
    